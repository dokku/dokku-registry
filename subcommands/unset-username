#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x
source "$PLUGIN_CORE_AVAILABLE_PATH/common/functions"
source "$PLUGIN_AVAILABLE_PATH/config/functions"
source "$PLUGIN_AVAILABLE_PATH/registry/functions"

registry-unset-username-cmd() {
  declare desc="unsets the username for an app"
  declare APP="$2"
  local cmd="$1"
  verify_app_name "$APP"

  dokku_log_info1 "Unsetting username"
  config_unset --no-restart "$APP" DOKKU_REGISTRY_USERNAME
}

registry-unset-username-cmd "$@"
